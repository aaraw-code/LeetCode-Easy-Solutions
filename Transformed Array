class Solution:
    def constructTransformedArray(self, nums: List[int]) -> List[int]:
        n = len(nums)
        ans = []
        for i in range(n):
            if nums[i]>0:
                new_index = (i+nums[i]) % n
                ans.append(nums[new_index])
            elif nums[i]<0:
                new_index = (i+nums[i]) % n
                ans.append(nums[new_index])
            else:
                ans.append(0)
        return ans
