"""
        Finds the majority element in the array using
        Boyer-Moore Voting Algorithm.

        A majority element is the element that appears
        more than âŒŠn / 2âŒ‹ times.
"""

class Solution:
    def majorityElement(self, nums: List[int]) -> int:
        
        candidate = None
        count = 0
        for num in nums:
            if count == 0:
                candidate = num
            if num == candidate:
                count+=1
            else:
                count-=1
        return candidate
