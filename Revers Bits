class Solution:
    def reverseBits(self, n: int) -> int:
        result = 0
        
        for i in range(32):
            # last bit nikal
            bit = n & 1
            
            # result ko left shift karke bit add kar
            result = (result << 1) | bit
            
            # n ko right shift kar next bit ke liye
            n = n >> 1
        
        return result
