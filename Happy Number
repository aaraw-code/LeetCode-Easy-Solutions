class Solution:
    def isHappy(self, n: int) -> bool:

        def get_next(num):
            total = 0
            while num:
                total += (num % 10) ** 2
                num //= 10
            return total

        slow = n
        fast = n

        while True:
            slow = get_next(slow)
            fast = get_next(get_next(fast))

            if fast == 1:
                return True
            if slow == fast:
                return False
